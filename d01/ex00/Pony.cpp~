#include "Pony.hpp"

Pony::Pony(){
  std::cout << "constructor called" << std::endl;
  Pony::_numOfPony++;
};

Pony::~Pony(){
  std::cout << "destructor called" << std::endl;
  Pony::_numOfPony--;
};

void Pony::ponyOnTheHeap(){
};

void Pony::ponyOnTheStack(){
};

int Pony::getNumOfPony() const{
  return(this->_numOfPony);
}

int Pony::_numOfPony = 0;
